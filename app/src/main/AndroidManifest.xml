<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ethanco.customlockscreendemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LockTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/TransTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MyLockScreenActivity"
            android:launchMode="singleInstance"
            android:theme="@style/LockTheme" />

        <activity
            android:name=".MyLockScreenPreActivity"
            android:launchMode="singleInstance"
            android:theme="@style/TransTheme" />

        <receiver android:name="com.ethanco.customlockscreendemo.LockSelfStartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
