<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LockTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_open</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_open</item>
    </style>
</resources>